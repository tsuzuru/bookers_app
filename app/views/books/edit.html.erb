<h2>Editing Book</h2>

<%= form_with model:@book, local:true do |f| %>

<% if @book.errors.any? %>
   <p><strong>error:</strong>can't be blank</p>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Update Book' %></br>

<% end %>

<%= link_to "Show", book_path(@book.id), class: "show_#{@book.id}" %>
<%= '|' %>
<%= link_to "Back", books_path, class: "back" %>
